<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edcheung.dao.PaperDao">

    <resultMap type="Paper" id="paperResultMap">
        <id property="paperId" column="paper_id"/>
        <result property="paperName" column="paper_name"/>
        <result property="paperNum" column="paper_number"/>
        <result property="paperDetail" column="paper_detail"/>
    </resultMap>

    <insert id="addPaper" parameterType="cn.edcheung.pojo.Paper">
        INSERT INTO paper ( paper_id, paper_name, paper_number, paper_detail )
        VALUE ( #{paperId}, #{paperName}, #{paperNum}, #{paperDetail} )
    </insert>

    <delete id="deletePaperById" parameterType="long">
        DELETE FROM paper WHERE paper_id = #{paperId}
    </delete>

    <update id="updatePaper" parameterType="cn.edcheung.pojo.Paper">
        UPDATE paper
        SET paper_name = #{paperName}, paper_number = #{paperNum}, paper_detail = #{paperDetail}
        WHERE paper_id = #{paperId}
    </update>

    <select id="queryById" parameterType="long" resultMap="paperResultMap">
        SELECT
            paper_id,
            paper_name,
            paper_number,
            paper_detail
        FROM
            paper
        WHERE
            paper_id = #{paperId}
    </select>

    <select id="queryAllPaper" resultType="cn.edcheung.pojo.Paper">
        SELECT
            paper_id,
            paper_name,
            paper_number,
            paper_detail
        FROM
            paper
    </select>
</mapper>